<table class="table table-stripped">
    <thead>
        <tr>
            <th> Name </th>
            <th> Symbol </th>
            <th> last price </th>
            <% if(@user.id == current_user.id)%>
                <th> last price </th>
            <%end%>
        </tr>  
    </thead>
    <tbody>
        <% @user_stocks.each do |user_stock|%>
        <tr>
            <td> <%=user_stock.name%></td>
            <td> <%=user_stock.ticker%></td>
            <td> <%=user_stock.last_price%> </td>
             <% if(@user.id == current_user.id)%>
                <th> <%= link_to 'delete this stock', user_stock_path(user_stock), method: :delete,
                            data: { confirm: 'are you sure?'} %> </th>
            <%end%>
        </tr>
        <%end%>
    </tbody>
</table>